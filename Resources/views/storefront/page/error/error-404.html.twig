{% sw_extends '@Storefront/storefront/page/error/error-404.html.twig' %}

{% block base_flashbags %}
    {% apply spaceless %}
        {{ parent() }}
    {% endapply %}
{% endblock %}

{% block base_main_inner %}
    {% block base_content %}
        {% block not_found_error_content %}
            <main class="container-404">
                <div class="content-bg">
                    <picture>
                        {% if theme_config('sw-404-bg-mobile') and theme_config('sw-404-bg-mobile') != theme_config('sw-404-bg-tablet') %}
                            <source srcset="{{ theme_config('sw-404-bg-mobile') |sw_encode_url }}"
                                    media="(max-width: {{ theme_config('breakpoint.md') - 1 }}px)">
                        {% endif %}

                        {% if theme_config('sw-404-bg-tablet') and theme_config('sw-404-bg-tablet') != theme_config('sw-404-bg-desktop') %}
                            <source srcset="{{ theme_config('sw-404-bg-tablet') |sw_encode_url }}"
                                    media="(min-width: {{ theme_config('breakpoint.md') }}px) and (max-width: {{ theme_config('breakpoint.lg') - 1 }}px)">
                        {% endif %}

                        {% if theme_config('sw-404-bg-desktop') %}
                            <img src="{{ theme_config('sw-404-bg-desktop') |sw_encode_url }}"
                                 alt="{{ "general.404ErrorPageHeader"|trans|striptags }}"
                                 class="mx-auto d-block"/>
                        {% endif %}
                    </picture>
                </div>
                <div class="content container text-center">
                    <h1>{{ "general.404ErrorPageHeader"|trans|sw_sanitize }}</h1>

                    <p class="w-60-l">{{ "general.404ErrorDescription"|trans|sw_sanitize }}</p>

                    {% block not_found_error_return %}
                        {{ parent() }}
                    {% endblock %}
                </div>
            </main>
        {% endblock %}
    {% endblock %}
{% endblock %}
