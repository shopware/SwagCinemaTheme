{% sw_extends '@Storefront/storefront/page/content/product-detail.html.twig' %}

{% block cms_breadcrumb %}
    <div class="product-detail-breadcrumb container">
        <div class="product-detail-button-back js-back-button" data-back-button="true">{% sw_icon 'ic-back' style {'pack': 'cinema'} %}
            {{ "detail.backButtonLabel"|trans|sw_sanitize }}
        </div>
        <div class="breadcrumb cms-breadcrumb">
            {% sw_include '@Storefront/storefront/layout/breadcrumb.html.twig' with {
                context: context,
                category: page.product.seoCategory
            } only %}
        </div>
    </div>
{% endblock %}
