{% sw_extends '@Storefront/storefront/layout/header/header-minimal.html.twig' %}

{% block layout_header_minimal_button %}
    <div class="col-6 header-minimal-back-to-shop ps-0">
        {% if context.customer and context.customer.guest %}
        <a href="{{ path('frontend.account.order.single.page', {'deepLinkCode': page.order.deepLinkCode}) }}"
           class="btn btn-link header-minimal-back-to-shop-button"
           title="{{ "account.editOrderBackToAccountButton"|trans|striptags }}">
            {% sw_icon 'ic-back' style {'pack': 'cinema'} %}
            {{ "account.editOrderBackToOrderButton"|trans|striptags }}
        </a>
        {% else %}
            <a href="{{ path('frontend.account.home.page') }}"
               class="btn btn-link header-minimal-back-to-shop-button"
               title="{{ "account.editOrderBackToAccountButton"|trans|striptags }}">
                {% sw_icon 'ic-back' style {'pack': 'cinema'} %}
                {{ "account.editOrderBackToAccountButton"|trans|striptags }}
            </a>
        {% endif %}
    </div>
{% endblock %}
