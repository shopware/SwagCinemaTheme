{% sw_extends '@Storefront/storefront/component/checkout/offcanvas-cart.html.twig' %}

{# Move flashbags block to top Offcanvas #}
{% block component_offcanvas_cart_header %}
    <div class="flashbags">
        {% for type, messages in app.flashes %}
            {% sw_include '@Storefront/storefront/utilities/alert.html.twig' with {
                type: type,
                list: messages
            } %}
        {% endfor %}
    </div>

    {{ parent() }}
{% endblock %}

{% block utilities_offcanvas_close_icon %}
    {% sw_icon 'ic-back' style {'pack': 'cinema'} %}
{% endblock %}

{% block component_offcanvas_cart_actions_promotion_label %}{% endblock %}
