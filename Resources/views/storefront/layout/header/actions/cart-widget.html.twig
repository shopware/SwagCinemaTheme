{% sw_extends '@Storefront/storefront/layout/header/actions/cart-widget.html.twig' %}

{% block layout_header_actions_cart_widget %}
    {% block layout_header_actions_cart_icon %}
        <span class="header-cart-icon">
            {% sw_icon 'ic-bag' style {'pack': 'cinema'} %}
        </span>
    {% endblock %}

    {% if page.cart.lineItems|length > 0 %}
        {% block layout_header_actions_cart_badge %}
            <span class="badge bg-light header-cart-badge">{{ page.cart.lineItems|length }}</span>
        {% endblock %}
    {% endif %}

    {% block layout_header_actions_cart_total %}{% endblock %}
{% endblock %}
