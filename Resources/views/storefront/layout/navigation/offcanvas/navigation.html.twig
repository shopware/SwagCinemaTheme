{% sw_extends '@Storefront/storefront/layout/navigation/offcanvas/navigation.html.twig' %}

{% block utilities_offcanvas_close_text %}
    {% sw_include '@Storefront/storefront/layout/header/logo.html.twig' %}
{% endblock %}

{% block layout_navigation_offcanvas_navigation_hotline %}
    <div class="navigation-offcanvas-hotline">
        {{ 'header.serviceHotlineHeadline'|trans|sw_sanitize }}
        {{ 'header.serviceHotline'|trans|sw_sanitize }}
    </div>
{% endblock %}

{% block utilities_offcanvas_content %}
    <div class="container navigation-offcanvas-top-bar py-2">
        <div class="row justify-content-between align-items-center">
            <div class="col-auto d-none d-sm-block">
                {{ block('layout_navigation_offcanvas_navigation_hotline') }}
            </div>
            <div class="col-auto">
                {{ block('layout_navigation_offcanvas_navigation_actions') }}
            </div>
        </div>
    </div>

    {% sw_include '@Storefront/storefront/layout/navigation/offcanvas/categories.html.twig' with { navigation: navigation } %}

    <div class="container navigation-offcanvas-bottom-bar py-4 d-block d-sm-none">
        <div class="row justify-content-between align-items-center">
            <div class="col">
                {{ block('layout_navigation_offcanvas_navigation_hotline') }}
            </div>
        </div>
    </div>
{% endblock %}
